<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resources</title>
    <link rel="stylesheet" href="/static/Style/resources.css" />

    <link rel="stylesheet" href="/static/Style/home.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <a href="#" class="logo">DARUL HIKMAH</a>
      <div class="menuToggle"></div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li>
            <a href="">read <b>▼</b></a>
            <ul>
              <li><a href="/getUserBlogs">blog</a></li>
              <li><a href="/getUserInfographics">infographics</a></li>
            </ul>
          </li>
          <li><a href="/getUserPosts">posts</a></li>
          <li><a href="/getUserResourcePublications">resources</a></li>
          <li>
            <a href="/getUserCourses">courses <b>▼</b></a>
            <ul>
              <li><a href="getUserKidCourses">for Women</a></li>
              <li><a href="getUserWomenCourses">for kids</a></li>
            </ul>
          </li>
          <li><a href="/aboutUs">about</a></li>
          <li><a href="/contactUs">contact us</a></li>
          <li>
            <a href="/getuserPublications">publications<b>▼</b></a>
            <ul>
              <li><a href="/getUserEBookPublications">Ebooks</a></li>
              <li><a href="/getUserAcademyPublications">by academy</a></li>
            </ul>
          </li>
        </ul>
      </nav>
    </header>
    <h1 class="title">All Resources</h1>

    <section>
      <div class="article-section">
        <% Resources.forEach(resource => { %>
        <!-- <h2 class="section-title"><%= resource.title %></h2> -->
        <div class="card">
          <img
            src="data:image/png;base64, <%= resource.image %>"
            alt="Uploaded Image"
          />
          <div class="card-content">
            <div class="card-title"><%= resource.title %></div>
            <div class="card-description"><%= resource.description %></div>
            <a
              href="/getUserResource/<%= resource._id %>"
              class="download-button"
              >View details</a
            >
          </div>
        </div>
        <% }) %>
      </div>
    </section>

    <script>
      let menuToggle = document.querySelector(".menuToggle");
      let header = document.querySelector("header");
      menuToggle.onclick = function () {
        header.classList.toggle("active");
      };
    </script>
  </body>
</html>
